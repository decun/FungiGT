    <%- include('partials/footer') %>

    <!-- Scripts necesarios -->
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', async function() {
            // URLs de los servidores
            const backendUrl = 'http://localhost:4003';  // Servidor de visualización (corregido de 5000 a 4003)
            const lidaUrl = 'http://localhost:4200';     // Servidor LIDA para CSV/TSV
            const bindashVisualizerUrl = 'http://localhost:4003';  // Servidor BinDash Visualizer
            const drFungitoUrl = 'http://localhost:4009';  // Servidor Dr. Fungito AI Agent
            
            const mainSelection = document.getElementById('mainSelection');
            const backButton = document.getElementById('backButton');
            const visualizers = document.querySelectorAll('.visualizer');
            const visualizerButtons = document.querySelectorAll('.visualizer-btn');

            // Limpiar uploads al cargar la página
            clearUploads();

            function clearUploads() {
                fetch(`${backendUrl}/clear_uploads`, {
                    method: 'POST',
                    headers: {
                        'Authorization': 'Bearer tu_token_secreto'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.status === 'success') {
                        console.log('Carpeta uploads/ limpiada.');
                    } else {
                        console.error('Error al limpiar uploads:', data.message);
                    }
                })
                .catch(error => {
                    console.error('Error al limpiar uploads:', error);
                });
            }

            // ========== FUNCIONES DR. FUNGITO INTEGRADAS ==========
            
            // Función para iluminar el chat de Dr. Fungito
            function highlightDrFungitoChat() {
                const drFungitoButton = document.getElementById('drFungitoButton');
                if (drFungitoButton) {
                    drFungitoButton.style.boxShadow = '0 0 20px rgba(34, 197, 94, 0.8)';
                    drFungitoButton.style.transform = 'scale(1.1)';
                    setTimeout(() => {
                        drFungitoButton.style.boxShadow = '';
                        drFungitoButton.style.transform = '';
                    }, 2000);
                }
            }
            
            // Función para abrir Dr. Fungito y enviar análisis
            async function analyzWithDrFungito(imageUrl, analysisType) {
                try {
                    // Iluminar el chat de Dr. Fungito
                    highlightDrFungitoChat();
                    
                    // Abrir el panel de Dr. Fungito
                    const drFungitoPanel = document.getElementById('drFungitoPanel');
                    if (drFungitoPanel) {
                        drFungitoPanel.classList.remove('hidden');
                    }
                    
                    // Descargar la imagen y convertirla a blob
                    const response = await fetch(imageUrl);
                    const blob = await response.blob();
                    
                    // Crear FormData para enviar
                    const formData = new FormData();
                    formData.append('image', blob, `analysis_${Date.now()}.png`);
                    formData.append('analysisType', analysisType);
                    formData.append('userContext', `Análisis automático de gráfico ${analysisType}`);
                    
                    // Mostrar mensaje en el chat de Dr. Fungito
                    const chatMessages = document.getElementById('chatMessages');
                    let loadingDiv = null; // Declarar la variable fuera del bloque
                    
                    if (chatMessages) {
                        const messageDiv = document.createElement('div');
                        messageDiv.className = 'flex items-start space-x-2';
                        messageDiv.innerHTML = `
                            <div class="w-8 h-8 rounded-full bg-blue-500 flex items-center justify-center text-white text-sm font-bold flex-shrink-0">👤</div>
                            <div class="bg-green-500 text-white p-3 rounded-lg shadow-sm max-w-xs">
                                <p class="text-sm">🔍 Analizar gráfico ${analysisType}</p>
                            </div>
                        `;
                        chatMessages.appendChild(messageDiv);
                        
                        // Mensaje de carga
                        loadingDiv = document.createElement('div');
                        loadingDiv.className = 'flex items-start space-x-2';
                        loadingDiv.innerHTML = `
                            <img src="/images/DrFungito.png" alt="Dr. Fungito" class="w-8 h-8 rounded-full object-cover flex-shrink-0" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                            <div class="w-8 h-8 rounded-full bg-green-500 flex items-center justify-center text-white text-sm font-bold flex-shrink-0 hidden">🍄</div>
                            <div class="bg-white p-3 rounded-lg shadow-sm border border-gray-200 max-w-xs">
                                <div class="flex items-center space-x-2">
                                    <div class="loading-spinner w-4 h-4 border-2 border-gray-300 border-t-green-500 rounded-full animate-spin"></div>
                                    <div class="text-sm text-gray-800">Analizando imagen con IA...</div>
                                </div>
                            </div>
                        `;
                        chatMessages.appendChild(loadingDiv);
                        chatMessages.scrollTop = chatMessages.scrollHeight;
                    }
                    
                    // Enviar a Dr. Fungito
                    const analysisResponse = await fetch(`${drFungitoUrl}/analyze-image`, {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'X-User-Id': getUserId()
                        }
                    });
                    
                    if (!analysisResponse.ok) {
                        throw new Error(`Error del servidor: ${analysisResponse.status}`);
                    }
                    
                    const analysisData = await analysisResponse.json();
                    
                    // Remover mensaje de carga
                    if (loadingDiv && loadingDiv.parentNode) {
                        loadingDiv.remove();
                    }
                    
                    // Mostrar resultado en el chat
                    if (chatMessages) {
                        const resultDiv = document.createElement('div');
                        resultDiv.className = 'flex items-start space-x-2';
                        resultDiv.innerHTML = `
                            <img src="/images/DrFungito.png" alt="Dr. Fungito" class="w-8 h-8 rounded-full object-cover flex-shrink-0" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                            <div class="w-8 h-8 rounded-full bg-green-500 flex items-center justify-center text-white text-sm font-bold flex-shrink-0 hidden">🍄</div>
                            <div class="bg-white p-3 rounded-lg shadow-sm border border-gray-200 max-w-xs">
                                <div class="text-sm text-gray-800 whitespace-pre-wrap">${analysisData.analysis}</div>
                                <div class="mt-2 text-xs text-gray-500">
                                    <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded">${analysisData.analysisType}</span>
                                </div>
                            </div>
                        `;
                        chatMessages.appendChild(resultDiv);
                        chatMessages.scrollTop = chatMessages.scrollHeight;
                    }
                    
                } catch (error) {
                    console.error('Error al analizar con Dr. Fungito:', error);
                    
                    // Remover mensaje de carga si existe
                    const loadingElement = document.querySelector('.loading-spinner')?.closest('.flex.items-start.space-x-2');
                    if (loadingElement) {
                        loadingElement.remove();
                    }
                    
                    // Mostrar error en el chat
                    const chatMessages = document.getElementById('chatMessages');
                    if (chatMessages) {
                        const errorDiv = document.createElement('div');
                        errorDiv.className = 'flex items-start space-x-2';
                        errorDiv.innerHTML = `
                            <img src="/images/DrFungito.png" alt="Dr. Fungito" class="w-8 h-8 rounded-full object-cover flex-shrink-0">
                            <div class="bg-red-50 border border-red-200 p-3 rounded-lg shadow-sm max-w-xs">
                                <div class="text-sm text-red-800">❌ Error al analizar imagen: ${error.message}</div>
                            </div>
                        `;
                        chatMessages.appendChild(errorDiv);
                        chatMessages.scrollTop = chatMessages.scrollHeight;
                    }
                }
            }
            
            // Función para crear botón de análisis (lupita)
            function createAnalyzeButton(imageUrl, analysisType) {
                const button = document.createElement('button');
                button.className = 'analyze-btn absolute top-2 right-2 bg-green-500 bg-opacity-80 hover:bg-opacity-100 text-white p-2 rounded-full shadow-lg transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-green-400';
                button.innerHTML = '<i class="fas fa-search text-sm"></i>';
                button.title = 'Analizar con Dr. Fungito IA';
                
                // Efectos hover para iluminar Dr. Fungito
                button.addEventListener('mouseenter', () => {
                    highlightDrFungitoChat();
                });
                
                button.addEventListener('click', (e) => {
                    e.preventDefault();
                    e.stopPropagation();
                    analyzWithDrFungito(imageUrl, analysisType);
                });
                
                return button;
            }
            
            // Función para obtener ID de usuario
            function getUserId() {
                return localStorage.getItem('drfungito_user_id') || 'user_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9);
            }

            // Función para mostrar el visualizador seleccionado
            async function showVisualizer(visualizerId) {
                mainSelection.classList.add('hidden');
                backButton.classList.remove('hidden');
                visualizers.forEach(v => v.classList.add('hidden'));
                document.getElementById(visualizerId).classList.remove('hidden');

                if (visualizerId === 'igvVisualizer') {
                    try {
                        await initializeIGV();
                    } catch (error) {
                        console.error('Error initializing IGV:', error);
                    }
                }
            }

            // Función para volver a la selección principal
            function showMainSelection() {
                mainSelection.classList.remove('hidden');
                backButton.classList.add('hidden');
                visualizers.forEach(v => v.classList.add('hidden'));
            }

            // Asignar eventos a los botones de visualizadores
            visualizerButtons.forEach(button => {
                button.addEventListener('click', function() {
                    showVisualizer(this.dataset.target);
                });
            });

            // Asignar evento al botón de volver
            backButton.addEventListener('click', showMainSelection);

            // ========== FUNCIONES PARA IGV ==========
            let igvBrowser;
            async function initializeIGV() {
                const igvContainer = document.getElementById('igvContainer');
                if (!igvContainer) {
                    console.error('IGV container not found');
                    return;
                }
                igvContainer.innerHTML = '';

                const options = {
                    genome: "hg38",
                    locus: "chr8:127,736,588-127,739,371",
                    tracks: []
                };

                try {
                    igvBrowser = await igv.createBrowser(igvContainer, options);
                    console.log('IGV Browser created successfully');
                } catch (error) {
                    console.error('Error creating IGV browser:', error);
                    throw error;
                }
            }

            // Limpiar al recargar o cerrar la página
            window.addEventListener('beforeunload', function() {
                navigator.sendBeacon(`${backendUrl}/cleanup`);
                if (lidaUrl) {
                    navigator.sendBeacon(`${lidaUrl}/cleanup`);
                }
            });

            // Limpiar archivos al cargar la página
            window.addEventListener('load', function() {
                fetch(`${backendUrl}/cleanup`, {
                    method: 'POST'
                })
                .then(response => response.json())
                .then(data => console.log('Limpieza inicial completada'))
                .catch(error => console.error('Error en limpieza inicial:', error));
            });

            // ========== FUNCIONES PARA SUBIDA DE ARCHIVOS ==========
            
            // BinDash file upload handler
            document.getElementById('bindashFileUpload').addEventListener('change', function(event) {
                const file = event.target.files[0];
                if (!file) return;
                
                const statusElement = document.getElementById('bindashUploadStatus');
                const graphsContainer = document.getElementById('bindashGraphsContainer');
                const statsPanel = document.getElementById('bindashStatsPanel');
                
                // Verificar que los elementos existen
                if (!statusElement || !graphsContainer) {
                    console.error('Error: No se encontraron los elementos necesarios en el DOM');
                    return;
                }
                
                statusElement.textContent = 'Subiendo y procesando archivo...';
                statusElement.className = 'ml-4 text-sm text-blue-600';
                
                // Limpiar contenedores anteriores
                graphsContainer.innerHTML = '';
                if (statsPanel) {
                    statsPanel.classList.add('hidden');
                }
                
                const formData = new FormData();
                formData.append('file', file);
                
                fetch(`${bindashVisualizerUrl}/process-bindash`, {
                    method: 'POST',
                    body: formData
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`Error HTTP: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('Resultado BinDash:', data);
                    statusElement.textContent = `✅ Archivo procesado exitosamente (${data.graphs.length} gráficos generados) Visualizador: BinDashVisualizer`;
                    statusElement.className = 'ml-4 text-sm text-green-600';
                    
                    // Mostrar estadísticas usando el panel existente
                    if (data.stats && statsPanel) {
                        displayBinDashStatsInPanel(data.stats, statsPanel);
                    }
                    
                    // Mostrar gráficos CON URLS CORREGIDAS Y DISEÑO NUEVO
                    if (data.graphs && data.graphs.length > 0) {
                        displayBinDashGraphsWithSelector(data.graphs, graphsContainer);
                    }
                })
                .catch(error => {
                    console.error('Error procesando archivo BinDash:', error);
                    statusElement.textContent = `❌ Error: ${error.message}`;
                    statusElement.className = 'ml-4 text-sm text-red-600';
                });
            });
            
            // Función para mostrar estadísticas en el panel existente
            function displayBinDashStatsInPanel(stats, panel) {
                // Actualizar los valores en los elementos existentes
                const totalComparisons = document.getElementById('totalComparisons');
                const uniqueGenomes = document.getElementById('uniqueGenomes');
                const meanANI = document.getElementById('meanANI');
                const meanDistance = document.getElementById('meanDistance');
                
                if (totalComparisons) totalComparisons.textContent = stats.total_comparisons || 'N/A';
                if (uniqueGenomes) uniqueGenomes.textContent = stats.unique_genomes || 'N/A';
                if (meanANI) meanANI.textContent = stats.avg_jaccard ? stats.avg_jaccard.toFixed(3) : 'N/A';
                if (meanDistance) meanDistance.textContent = stats.avg_mutation_distance ? stats.avg_mutation_distance.toFixed(3) : 'N/A';
                
                // Mostrar el panel
                panel.classList.remove('hidden');
            }
            
            // NUEVA función para mostrar gráficos con selector (como en la imagen)
            function displayBinDashGraphsWithSelector(graphs, container) {
                // Corregir todas las URLs para que apunten al puerto 4003
                const correctedGraphs = graphs.map(graphUrl => {
                    if (graphUrl.startsWith('/graphs/')) {
                        return `http://localhost:4003${graphUrl}`;
                    }
                    return graphUrl.replace('http://localhost:4005', 'http://localhost:4003');
                });
                
                const selectorHTML = `
                    <div class="bg-white p-4 rounded-lg border border-gray-200 shadow-sm">
                        <div class="flex items-center justify-between mb-4">
                            <label class="font-medium text-gray-700">Seleccionar Gráfico:</label>
                            <select id="graphSelector" class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500">
                                ${correctedGraphs.map((graphUrl, index) => {
                                    const title = getGraphTitle(graphUrl);
                                    return `<option value="${index}" ${index === 0 ? 'selected' : ''}>${title}</option>`;
                                }).join('')}
                            </select>
                        </div>
                        
                        <!-- Visualizador de gráfico único -->
                        <div class="relative bg-gray-50 rounded-lg border-2 border-gray-200">
                            <!-- Controles en la esquina superior derecha -->
                            <div class="absolute top-3 right-3 z-10 flex space-x-2">
                                <!-- Botón de Dr. Fungito (lupita) -->
                                <button id="drFungitoAnalyzeBtn" class="bg-green-500 bg-opacity-80 hover:bg-opacity-100 text-white p-2 rounded hover:scale-110 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-green-400" title="Analizar con Dr. Fungito IA">
                                    <i class="fas fa-search text-sm"></i>
                                </button>
                                <button id="zoomInBtn" class="bg-gray-800 bg-opacity-75 text-white p-2 rounded hover:bg-opacity-100 transition-all">
                                    <i class="fas fa-search-plus text-sm"></i>
                                </button>
                                <button id="zoomOutBtn" class="bg-gray-800 bg-opacity-75 text-white p-2 rounded hover:bg-opacity-100 transition-all">
                                    <i class="fas fa-search-minus text-sm"></i>
                                </button>
                                <button id="fullscreenBtn" class="bg-gray-800 bg-opacity-75 text-white p-2 rounded hover:bg-opacity-100 transition-all">
                                    <i class="fas fa-expand text-sm"></i>
                                </button>
                                <button id="downloadBtn" class="bg-gray-800 bg-opacity-75 text-white p-2 rounded hover:bg-opacity-100 transition-all">
                                    <i class="fas fa-download text-sm"></i>
                                </button>
                            </div>
                            
                            <!-- Título del gráfico -->
                            <div class="absolute top-3 left-3 z-10">
                                <h5 id="graphTitle" class="bg-white bg-opacity-90 px-3 py-1 rounded-md text-sm font-semibold text-gray-800 shadow-sm">
                                    ${getGraphTitle(correctedGraphs[0])}
                                </h5>
                            </div>
                            
                            <!-- Imagen del gráfico -->
                            <div class="p-6 min-h-[500px] flex items-center justify-center">
                                <img id="currentGraphImage" 
                                     src="${correctedGraphs[0]}" 
                                     alt="Gráfico BinDash" 
                                     class="max-w-full max-h-[500px] object-contain rounded-lg shadow-lg transition-transform duration-200"
                                     style="cursor: grab;"
                                     onerror="this.src='data:image/svg+xml;base64,'; this.alt='Error cargando imagen';" />
                            </div>
                        </div>
                    </div>
                `;
                
                container.innerHTML = selectorHTML;
                
                // Event listeners para el selector y controles
                const selector = document.getElementById('graphSelector');
                const currentImage = document.getElementById('currentGraphImage');
                const graphTitle = document.getElementById('graphTitle');
                const drFungitoBtn = document.getElementById('drFungitoAnalyzeBtn');
                const zoomInBtn = document.getElementById('zoomInBtn');
                const zoomOutBtn = document.getElementById('zoomOutBtn');
                const fullscreenBtn = document.getElementById('fullscreenBtn');
                const downloadBtn = document.getElementById('downloadBtn');
                
                let currentScale = 1;
                
                // Dr. Fungito análisis
                drFungitoBtn.addEventListener('mouseenter', () => {
                    highlightDrFungitoChat();
                });
                
                drFungitoBtn.addEventListener('click', function() {
                    const selectedIndex = parseInt(selector.value);
                    const selectedGraph = correctedGraphs[selectedIndex];
                    analyzWithDrFungito(selectedGraph, 'bindash');
                });
                
                // Cambiar gráfico
                selector.addEventListener('change', function() {
                    const selectedIndex = parseInt(this.value);
                    const selectedGraph = correctedGraphs[selectedIndex];
                    currentImage.src = selectedGraph;
                    graphTitle.textContent = getGraphTitle(selectedGraph);
                    currentScale = 1;
                    currentImage.style.transform = `scale(${currentScale})`;
                });
                
                // Zoom in
                zoomInBtn.addEventListener('click', function() {
                    currentScale = Math.min(currentScale * 1.2, 3);
                    currentImage.style.transform = `scale(${currentScale})`;
                });
                
                // Zoom out  
                zoomOutBtn.addEventListener('click', function() {
                    currentScale = Math.max(currentScale / 1.2, 0.5);
                    currentImage.style.transform = `scale(${currentScale})`;
                });
                
                // Pantalla completa
                fullscreenBtn.addEventListener('click', function() {
                    viewFullscreen(currentImage.src);
                });
                
                // Descargar
                downloadBtn.addEventListener('click', function() {
                    downloadGraph(currentImage.src);
                });
                
                // Drag para mover imagen cuando está zoomeada
                let isDragging = false;
                let dragStartX, dragStartY, initialTransformX = 0, initialTransformY = 0;
                
                currentImage.addEventListener('mousedown', function(e) {
                    if (currentScale > 1) {
                        isDragging = true;
                        dragStartX = e.clientX;
                        dragStartY = e.clientY;
                        currentImage.style.cursor = 'grabbing';
                    }
                });
                
                document.addEventListener('mousemove', function(e) {
                    if (isDragging && currentScale > 1) {
                        const deltaX = e.clientX - dragStartX;
                        const deltaY = e.clientY - dragStartY;
                        currentImage.style.transform = `scale(${currentScale}) translate(${initialTransformX + deltaX/currentScale}px, ${initialTransformY + deltaY/currentScale}px)`;
                    }
                });
                
                document.addEventListener('mouseup', function() {
                    if (isDragging) {
                        isDragging = false;
                        currentImage.style.cursor = 'grab';
                        // Actualizar la posición inicial para el próximo drag
                        const transform = currentImage.style.transform;
                        const translateMatch = transform.match(/translate\(([^,]+)px,\s*([^)]+)px\)/);
                        if (translateMatch) {
                            initialTransformX = parseFloat(translateMatch[1]);
                            initialTransformY = parseFloat(translateMatch[2]);
                        }
                    }
                });
                
                // Reset posición con doble click
                currentImage.addEventListener('dblclick', function() {
                    currentScale = 1;
                    initialTransformX = 0;
                    initialTransformY = 0;
                    currentImage.style.transform = 'scale(1) translate(0px, 0px)';
                });
            }
            
            // Función para obtener título del gráfico basado en la URL
            function getGraphTitle(graphUrl) {
                const filename = graphUrl.split('/').pop().replace('.png', '');
                const titles = {
                    'distance_heatmap': '🔥 Mapa de Calor - Distancias',
                    'ani_heatmap': '🔥 Mapa de Calor - ANI', 
                    'correlation_heatmap': '🔥 Mapa de Calor - Correlaciones',
                    'dendrogram_simple': '🌳 Dendrograma Simple',
                    'distance_distributions': '📊 Distribución de Distancias',
                    'scatter_analysis': '📈 Análisis de Dispersión',
                    'mds_analysis': '🗺️ Análisis Multidimensional'
                };
                
                for (const [key, title] of Object.entries(titles)) {
                    if (filename.includes(key)) {
                        return title;
                    }
                }
                
                return '📊 Gráfico de Análisis';
            }
            
            // Función para descargar gráfico
            function downloadGraph(graphUrl) {
                const link = document.createElement('a');
                link.href = graphUrl;
                link.download = graphUrl.split('/').pop();
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
            }
            
            // Función para ver imagen en pantalla completa
            function viewFullscreen(imageUrl) {
                const modal = document.createElement('div');
                modal.className = 'fixed inset-0 bg-black bg-opacity-90 flex items-center justify-center z-50 p-4';
                modal.innerHTML = `
                    <div class="relative max-w-full max-h-full">
                        <button class="absolute -top-12 right-0 text-white text-2xl hover:text-gray-300 transition-colors" onclick="this.parentElement.parentElement.remove()">
                            <i class="fas fa-times"></i>
                        </button>
                        <img src="${imageUrl}" alt="Gráfico ampliado" class="max-w-full max-h-full object-contain rounded-lg shadow-2xl">
                    </div>
                `;
                
                modal.addEventListener('click', (e) => {
                    if (e.target === modal) {
                        modal.remove();
                    }
                });
                
                document.body.appendChild(modal);
            }
        });
    </script>
</body>
